# Environment Variables
DISCORD_APPLICATION_ID=your_discord_application_id
DISCORD_PUBLIC_KEY=your_discord_public_key
DISCORD_BOT_TOKEN=your_discord_bot_token
GUILD_ID=your_guild_id_for_testing

# Database/Storage (choose one)
# For simple file-based storage
AUTH_DATA_PATH=./data/auth.json

# For Prisma Database (recommended)
DATABASE_URL="postgresql://username:password@localhost:5432/mc_discord_auth?schema=public"
# Alternative for SQLite (for development)
# DATABASE_URL="file:./dev.db"

# Minecraft Server Integration
MC_SERVER_URL=your_minecraft_server_url
MC_SERVER_API_KEY=your_minecraft_server_api_key

# Vercel
VERCEL_URL=your_vercel_deployment_url

# Admin Configuration
ADMIN_USER_ID=your_discord_user_id_for_admin_access
ADMIN_ROLES=role_id_1,role_id_2

# Prisma edge client
# Set to `true` to use the Prisma edge client (for Vercel Edge runtime).
# Default is `false` to use the standard Node Prisma client.
PRISMA_EDGE=false
